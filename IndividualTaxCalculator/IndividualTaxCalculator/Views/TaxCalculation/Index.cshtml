@model TaxCalculation
@{
    ViewData["Title"] = @ViewBag.Title;
}

<h1>@ViewBag.Title</h1>

<h2>@ViewBag.Message</h2>

<form asp-action="Submit" asp-controller="TaxCalculation" method="post" class="form-check" role="form">
    <div class="form-group">
        <label asp-for="PostalCode" class="col-md-2 custom-control-label"></label>
        <div class="col-md-5">
            <input asp-for="PostalCode" class="form-control" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="AnnualIncome" class="col-md-2 custom-control-label"></label>
        <div class="col-md-5">
            <input asp-for="AnnualIncome" class="form-control" />
            <span asp-validation-for="AnnualIncome" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" id="submitTaxCalc" class="btn-dark" value="Submit" />
        </div>
    </div>


</form>